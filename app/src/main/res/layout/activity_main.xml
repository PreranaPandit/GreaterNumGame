<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bff6ff"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:hint="WELCOME TO GREATER NUMBER GAME"
        android:textColorHint="#fff"
        android:background="#0e0270"
        android:textAlignment="center"
        android:layout_marginTop="1dp"
        android:textSize="28dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Choose the greatest number ten times!.."
        android:textStyle="bold"
        android:textColorHint="#000"
        android:background="#dcb9f5"
        android:textAlignment="center"
        android:textSize="19dp"


        />

    <Button
        android:id="@+id/btnFirstNum"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="130dp"
        android:background="#0e7d0d"
        android:textColor="#fff"
        android:layout_width="150dp"
        android:layout_height="50dp"
        />


    <Button
        android:id="@+id/btnSecondNum"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="130dp"
        android:background="#0e7d0d"
        android:textColor="#fff"
        android:layout_width="150dp"
        android:layout_height="50dp"
        />


    <TextView
        android:id="@+id/tvTotalSore"
        android:textSize="25dp"
        android:text="Score"
        android:textAlignment="center"
        android:textColor="#fff"
        android:background="#0472f9"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="88dp"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textStyle="normal|bold"
        />


</LinearLayout>